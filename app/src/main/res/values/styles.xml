<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomSpinnerDropdown" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">20sp</item>
    </style>




</resources>